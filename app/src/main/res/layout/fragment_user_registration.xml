<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.signup.UserRegistrationFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_get_started"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="65dp"
        android:text="Let's Know You"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:fontFamily="@font/rubi_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dummy_text"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/rubik"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Tincidunt massa etiam dolor erat. Mi vitae."
        android:textColor="@color/black"
        android:textSize="16sp"
        android:maxLines="3"
        app:layout_constraintStart_toStartOf="@id/tv_get_started"
        app:layout_constraintTop_toBottomOf="@id/tv_get_started" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/il_first_name"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="23dp"
        android:layout_marginTop="22dp"
        android:hint="First name"
        android:textColorHint="@color/black"
        app:boxBackgroundColor="@color/edit_text_background"
        app:boxCornerRadiusBottomEnd="5dp"
        app:boxCornerRadiusBottomStart="5dp"
        app:boxCornerRadiusTopEnd="5dp"
        app:boxCornerRadiusTopStart="5dp"
        app:boxStrokeColor="@color/edit_text_background"
        app:boxStrokeWidth="0dp"
        app:fontFamily="@font/rubik"
        app:hintTextColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dummy_text">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_first_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/rubik"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/il_last_name"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="Last name"
        android:textColorHint="@color/black"
        app:boxBackgroundColor="@color/edit_text_background"
        app:boxCornerRadiusBottomEnd="5dp"
        app:boxCornerRadiusBottomStart="5dp"
        app:boxCornerRadiusTopEnd="5dp"
        app:boxCornerRadiusTopStart="5dp"
        app:boxStrokeColor="@color/edit_text_background"
        app:boxStrokeWidth="0dp"
        app:fontFamily="@font/rubik"
        app:hintTextColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/il_first_name"
        app:layout_constraintStart_toStartOf="@id/il_first_name"
        app:layout_constraintTop_toBottomOf="@id/il_first_name">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_last_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/rubik"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/il_email"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="Email address"
        android:textColorHint="@color/black"
        app:boxBackgroundColor="@color/edit_text_background"
        app:boxCornerRadiusBottomEnd="5dp"
        app:boxCornerRadiusBottomStart="5dp"
        app:boxCornerRadiusTopEnd="5dp"
        app:boxCornerRadiusTopStart="5dp"
        app:boxStrokeColor="@color/edit_text_background"
        app:boxStrokeWidth="0dp"
        app:fontFamily="@font/rubik"
        app:hintTextColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/il_last_name"
        app:layout_constraintStart_toStartOf="@id/il_last_name"
        app:layout_constraintTop_toBottomOf="@id/il_last_name">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/rubik"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/il_location"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="Location"
        android:textColorHint="@color/black"
        app:boxBackgroundColor="@color/edit_text_background"
        app:boxCornerRadiusBottomEnd="5dp"
        app:boxCornerRadiusBottomStart="5dp"
        app:boxCornerRadiusTopEnd="5dp"
        app:boxCornerRadiusTopStart="5dp"
        app:boxStrokeColor="@color/edit_text_background"
        app:boxStrokeWidth="0dp"
        app:fontFamily="@font/rubik"
        app:hintTextColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/il_email"
        app:layout_constraintStart_toStartOf="@id/il_email"
        app:layout_constraintTop_toBottomOf="@id/il_email">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/rubik"
            android:inputType="text"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_proceed"
        style="@style/RedFilledButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="473dp"
        android:layout_marginEnd="23dp"
        android:text="Proceed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/dummy_text"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>