<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imv_image_background"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/_downloader_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imv_gradient_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/rectangle_4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_title"
            android:layout_width="282dp"
            android:layout_height="33dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="530dp"
            android:lineHeight="28.35dp"
            android:text="Let's get started"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_description"
            android:layout_width="303dp"
            android:layout_height="75dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="571dp"
            android:lineHeight="18.96dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Tincidunt massa etiam dolor erat. Mi vitae."
            android:textColor="@color/white"
            android:textFontWeight="400"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_next"
            android:layout_width="330dp"
            android:layout_height="48dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="677dp"
            android:layout_marginBottom="87dp"
            android:lineHeight="24dp"
            android:text="Next"
            android:textAllCaps="false"
            android:textFontWeight="500"
            android:textSize="16sp"
            app:cornerRadius="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>