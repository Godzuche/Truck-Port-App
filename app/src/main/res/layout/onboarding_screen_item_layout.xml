<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imv_image_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/gradient_background"
            android:scaleType="centerCrop"
            android:src="@drawable/_downloader_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imv_gradient_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/rectangle_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_title"
            android:layout_width="282dp"
            android:layout_height="33dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="400dp"
            android:lineHeight="28.35dp"
            android:text="Let's get started"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_description"
            android:layout_width="303dp"
            android:layout_height="75dp"
            android:layout_marginTop="8dp"
            android:lineHeight="18.96dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Tincidunt massa etiam dolor erat. Mi vitae."
            android:textColor="@color/white"
            android:textFontWeight="400"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_next"
            android:layout_width="330dp"
            android:layout_height="48dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="23dp"
            android:lineHeight="24dp"
            android:text="Next"
            android:textAllCaps="false"
            android:textFontWeight="500"
            android:textSize="16sp"
            app:cornerRadius="5dp"
            style="@style/Widget.Material3.Button"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_description" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_login"
            android:layout_width="330dp"
            android:layout_height="48dp"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:lineHeight="24dp"
            android:text="Login"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textFontWeight="500"
            android:textSize="16sp"
            app:cornerRadius="5dp"
            style="@style/Widget.Material3.Button.TextButton"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp"
            app:layout_constraintStart_toStartOf="@id/bt_next"
            app:layout_constraintEnd_toEndOf="@id/bt_next"
            app:layout_constraintTop_toBottomOf="@id/bt_next" />

    </androidx.constraintlayout.widget.ConstraintLayout>